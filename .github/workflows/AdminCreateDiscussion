name: Admin Taxonomy Edits

on:
  workflow_dispatch:
  pull_request:
    branches:
      - main  

jobs:
  admin_create_discussion:
    runs-on: ubuntu-latest
    permissions:
      actions: write
      issues: write
      discussions: write
    steps:
      - name: Checkout code
        uses: actions/checkout@v2
      - name: admin Create discussion
        run: |
          curl -X POST \
            -H "Accept: application/vnd.github.v3+json" \
            -H "Authorization: token ${{ secrets.GITHUB_TOKEN }}" \
            https://api.github.com/teams/dtpr/discussions \
            -d '{
                  "title": "'${{ github.event.pull_request.title }}'",
                  "category_name": "Proposed Taxonomy Edits",
                  "body": "'${{ github.event.pull_request.body }}\n\nLink to pull request: ${{ github.event.pull_request.html_url }}'"
                }'
